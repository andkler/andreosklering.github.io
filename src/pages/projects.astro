---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Rauva Pay',
    org: 'Rauva',
    description: 'Led the launch of Rauva Pay from concept to production in under 3 weeks. Overcame regulatory complexity for a 3-month rollout.',
    outcome: '>1000% revenue growth',
    tags: ['Fintech', 'Payments', 'Product Launch'],
  },
  {
    title: 'Checkout Re-architecture',
    org: 'Primer',
    description: 'Re-architected checkout services across 7 squads (~40 engineers). Built developer-focused APIs that cut third-party onboarding from 1 month to 2 days.',
    outcome: '80% faster delivery',
    tags: ['Payments', 'Architecture', 'Scale'],
  },
  {
    title: 'Farfetch Identity Platform',
    org: 'Farfetch',
    description: 'Scaled Identity & Account engineering from 1 to 4 squads (15+ staff). Launched unified Farfetch Login, cutting support tickets by 50%.',
    outcome: '3.9M MAUs',
    tags: ['Identity', 'Scale', 'E-commerce'],
  },
  {
    title: 'LivingOffset',
    org: 'Founder',
    description: 'Founded climate-tech startup leveraging blockchain for transparent carbon offsetting. Built 9-person team, shipped MVP with Ethereum-based tracking.',
    outcome: 'Full product from 0',
    tags: ['Startup', 'Blockchain', 'Climate'],
  },
  {
    title: 'TargetBeyond',
    org: 'Founder & CEO',
    description: 'Founded 20+ person consultancy delivering full-cycle platforms to clients in banking, betting, and manufacturing across LATAM and Europe.',
    outcome: '20+ products shipped',
    tags: ['Consultancy', 'Founder', 'Full-stack'],
  },
  {
    title: 'DOIS',
    org: 'Side project',
    description: 'Engineering blog and experiments with Thiago. Opinions on engineering, building products, and what it takes to ship.',
    outcome: 'dois.one',
    tags: ['Writing', 'Engineering'],
    link: 'https://dois.one',
  },
];
---

<BaseLayout title="Projects" description="Projects and work by Andreos Klering">
  <section class="py-20">
    <div class="max-w-5xl mx-auto px-6">
      <div class="mb-12">
        <h1 class="text-3xl lg:text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-4">
          Projects
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          Things I've built, led, or contributed to.
        </p>
      </div>

      <div class="grid gap-6">
        {projects.map((project) => (
          <div class="card group">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
              <div>
                <h2 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-orange-600 dark:group-hover:text-accent transition-colors">
                  {project.link ? (
                    <a href={project.link} target="_blank" rel="noopener" class="flex items-center gap-2">
                      {project.title}
                      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M7 17L17 7M17 7H7M17 7V17"/>
                      </svg>
                    </a>
                  ) : (
                    project.title
                  )}
                </h2>
                <p class="text-sm text-orange-600 dark:text-accent">{project.org}</p>
              </div>
              <span class="text-sm font-medium text-gray-900 dark:text-white whitespace-nowrap">
                {project.outcome}
              </span>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-4">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="px-2.5 py-1 text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-200 dark:bg-gray-700/50 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

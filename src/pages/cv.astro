---

<BaseLayout title="CV" description="Thiago Char√£o - CV and work experience">
  <section class="py-16 lg:py-20">
    <div class="max-w-5xl mx-auto px-6">
      <!-- Header -->
      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-16">
        <div class="flex-1">
          <h1 class="text-3xl lg:text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-3">
            Thiago Char√£o
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-4">
            Director of Architecture
          </p>
          <p class="text-gray-700 dark:text-gray-300 max-w-2xl">
            Technology & Architecture leader with 20+ years across software engineering, consulting, and architecture leadership. 
            I build scalable platform and identity foundations and drive measurable delivery efficiency through engineering standards and AI enablement.
          </p>
        </div>
        <a 
          href="/cv/thiago-charao-cv.pdf" 
          download
          class="btn-primary self-start shrink-0"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Download PDF
        </a>
      </div>

      <!-- Key Highlights - Visual Cards -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-16">
        <div class="stat-card rounded-xl p-5 border">
          <p class="text-3xl font-bold mb-1">20+</p>
          <p class="text-sm opacity-70">Years in software</p>
        </div>
        <div class="stat-card rounded-xl p-5 border">
          <p class="text-3xl font-bold mb-1">~300</p>
          <p class="text-sm opacity-70">Engineers AI enabled</p>
        </div>
        <div class="stat-card rounded-xl p-5 border">
          <p class="text-3xl font-bold mb-1">~20%</p>
          <p class="text-sm opacity-70">Productivity uplift</p>
        </div>
        <div class="stat-card rounded-xl p-5 border">
          <p class="text-3xl font-bold mb-1">50K+</p>
          <p class="text-sm opacity-70">MAU identity scale</p>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-16">
        
        <!-- Main Content - Timeline -->
        <div class="lg:col-span-2 min-w-0">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-8 flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3">
            <span>Experience</span>
            <div class="flex flex-wrap gap-2 text-xs">
              <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-emerald-500"></span> Leadership</span>
              <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-blue-500"></span> Engineering</span>
              <span class="flex items-center gap-1"><span class="w-2 h-2 rounded-full bg-violet-500"></span> Consulting</span>
            </div>
          </h2>
          
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-[7px] top-2 bottom-2 w-0.5 bg-gray-200 dark:bg-gray-700"></div>
            
            <div class="space-y-8">
              {timeline.map((job, index) => (
                <div class="relative pl-8">
                  {/* Easter egg for early career */}
                  {job.isEarly && index === timeline.findIndex(j => j.isEarly) && (
                    <div class="mb-8 p-4 bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-xl border border-amber-200 dark:border-amber-800">
                      <p class="text-sm text-amber-800 dark:text-amber-200 flex items-center gap-2">
                        <span class="text-lg">üç™</span>
                        <span>You scrolled all the way down here? Have a cookie! Here's where it all started...</span>
                      </p>
                    </div>
                  )}
                  <!-- Timeline dot -->
                  <div class={`absolute left-0 top-1.5 w-4 h-4 rounded-full ${typeColors[job.type]} ring-4 ring-white dark:ring-gray-900`}></div>
                  
                  <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-3 mb-2">
                    <span class="text-xs font-mono text-gray-400 dark:text-gray-500 sm:order-last">{job.year}</span>
                    <h3 class="font-bold text-gray-900 dark:text-white">{job.title}</h3>
                  </div>
                  <p class="text-blue-600 dark:text-accent text-sm font-medium mb-2">{job.company}</p>
                  <ul class="space-y-1">
                    {job.highlights.map((item) => (
                      <li class="text-sm text-gray-700 dark:text-gray-400 flex items-start gap-2">
                        <span class="text-gray-400 dark:text-gray-600 mt-1">¬∑</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-10 min-w-0">
          <!-- Skills -->
          <div>
            <h2 class="text-xl font-bold mb-6">Skills</h2>
            <div class="space-y-5">
              {Object.entries(skills).map(([category, items]) => (
                <div>
                  <h3 class="text-sm font-medium mb-2">{category}</h3>
                  <div class="flex flex-wrap gap-1.5">
                    {items.map((skill) => (
                      <span class="skill-tag text-xs px-2 py-1 rounded">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Education -->
          <div>
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Education</h2>
            <div class="space-y-4">
              {education.map((edu) => (
                <div>
                  <p class="font-medium text-gray-900 dark:text-white text-sm">{edu.name}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">{edu.detail}</p>
                  {edu.focus && <p class="text-xs text-gray-400 dark:text-gray-500">{edu.focus}</p>}
                </div>
              ))}
            </div>
          </div>

          <!-- Languages -->
          <div>
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Languages</h2>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between gap-4">
                <span class="text-gray-600 dark:text-gray-400">Portuguese</span>
                <span class="text-gray-400 dark:text-gray-500 shrink-0">Native</span>
              </div>
              <div class="flex justify-between gap-4">
                <span class="text-gray-600 dark:text-gray-400">English</span>
                <span class="text-gray-400 dark:text-gray-500 shrink-0">Fluent</span>
              </div>
              <div class="flex justify-between gap-4">
                <span class="text-gray-600 dark:text-gray-400">Italian</span>
                <span class="text-gray-400 dark:text-gray-500 shrink-0">Elementary</span>
              </div>
            </div>
          </div>

          <!-- Contact -->
          <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Contact</h2>
            <div class="space-y-2 text-sm">
              <a href="https://linkedin.com/in/charao" target="_blank" class="text-blue-600 dark:text-accent hover:underline block">linkedin.com/in/charao</a>
              <a href="https://charao.dev" class="text-blue-600 dark:text-accent hover:underline block">charao.dev</a>
              <a href="mailto:thiago@charao.dev" class="text-blue-600 dark:text-accent hover:underline block">thiago@charao.dev</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

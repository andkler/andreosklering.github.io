---
const navItems = [
  { name: 'CV', url: '/cv' },
  { name: 'Projects', url: '/projects' },
  { name: 'Writing', url: '/writing' },
  { name: 'Contact', url: '/contact' },
];
---

<header class="h-14 bg-gray-100 dark:bg-bg-header border-b border-gray-200 dark:border-gray-700/50">
  <div class="max-w-4xl mx-auto px-6 h-full flex items-center justify-between">
    <a href="/" class="font-mono text-sm text-gray-700 dark:text-gray-300 flex items-center hover:text-gray-900 dark:hover:text-white transition-colors">
      <span class="text-gray-400 dark:text-gray-500">~/</span>charao.dev<span class="terminal-cursor"></span>
    </a>
    
    <div class="flex items-center gap-6">
      <nav class="hidden md:flex items-center gap-5">
        {navItems.map((item) => (
          <a 
            href={item.url} 
            class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          >
            {item.name}
          </a>
        ))}
      </nav>

      <button 
        id="theme-toggle" 
        class="p-2 -m-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors border border-gray-300 dark:border-gray-600 rounded-md"
        aria-label="Toggle theme"
      >
        <!-- Sun icon - show when in dark mode to switch to light -->
        <svg class="sun-icon w-[18px] h-[18px]" id="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"/>
          <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
        </svg>
        <!-- Moon icon - show when in light mode to switch to dark -->
        <svg class="moon-icon w-[18px] h-[18px] hidden" id="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>

      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 -m-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white"
        aria-label="Menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-gray-100 dark:bg-bg-header border-t border-gray-200 dark:border-gray-700">
    <nav class="max-w-4xl mx-auto px-6 py-4 flex flex-col gap-3">
      {navItems.map((item) => (
        <a 
          href={item.url} 
          class="text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors py-1"
        >
          {item.name}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const toggle = document.getElementById('theme-toggle');
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const sunIcon = document.getElementById('sun-icon');
  const moonIcon = document.getElementById('moon-icon');

  function updateIcons() {
    const isDark = document.documentElement.classList.contains('dark');
    if (isDark) {
      sunIcon?.classList.remove('hidden');
      moonIcon?.classList.add('hidden');
    } else {
      sunIcon?.classList.add('hidden');
      moonIcon?.classList.remove('hidden');
    }
  }

  // Initial state
  updateIcons();

  toggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem('theme', isDark ? 'light' : 'dark');
    updateIcons();
  });

  mobileBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
